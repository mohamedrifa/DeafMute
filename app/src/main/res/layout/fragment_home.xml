<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:scrollbars="none">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="195dp"
                                android:layout_height="243dp"
                                android:id="@+id/BasicNeeds"
                                android:background="@drawable/recomended1">
                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"
                                    android:background="@color/white"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="20dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="195dp"
                                android:layout_height="243dp"
                                android:id="@+id/SignLanguage"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/recomended2"/>
                            <RelativeLayout
                                android:layout_width="195dp"
                                android:layout_height="243dp"
                                android:id="@+id/TextToSpeech"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/recomended3"/>
                            <RelativeLayout
                                android:layout_width="195dp"
                                android:layout_height="243dp"
                                android:id="@+id/SpeechToText"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/recomended4"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/our_courses"
                        android:textColor="#335910"
                        android:fontFamily="@font/poppins"
                        android:textSize="13sp"
                        android:textFontWeight="600"
                        android:layout_marginTop="25dp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>