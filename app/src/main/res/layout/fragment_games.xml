<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Games">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="39dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="192dp"
                android:background="@drawable/course_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="132dp"
                    android:layout_height="141dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="14dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/games_choose"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#121010"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:text="@string/choose" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="192dp"
                android:background="@drawable/course_background"
                android:gravity="center_horizontal"
                android:layout_marginStart="36dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="132dp"
                    android:layout_height="141dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="14dp">
                    <ImageView
                        android:id="@+id/course_icon"
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/games_fillit"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#121010"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:text="@string/fill_it" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="192dp"
                android:background="@drawable/course_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="132dp"
                    android:layout_height="141dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="14dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/games_storeinbrain"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#121010"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:text="@string/store_in_brain" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="146dp"
                android:layout_height="192dp"
                android:background="@drawable/course_background"
                android:gravity="center_horizontal"
                android:layout_marginStart="36dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="132dp"
                    android:layout_height="141dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="14dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/games_match"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#121010"
                    android:textSize="12sp"
                    android:textFontWeight="500"
                    android:text="@string/match" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>