<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hey Sam - "
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textFontWeight="600"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/learn_new_everyday_just_try"
                        android:fontFamily="@font/poppins"
                        android:textColor="#71717A"
                        android:textSize="12sp"
                        android:textFontWeight="200"/>
                </LinearLayout>
                <TextView
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:text="@string/your_assignments_are_pending_kindly_completed_that_will_gain_more_scores_accoding_to_the_course"
                    android:fontFamily="@font/poppins"
                    android:textColor="#71717A"
                    android:textSize="12sp"
                    android:textFontWeight="200"/>
                <TextView
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:text="@string/click_here"
                    android:fontFamily="@font/poppins"
                    android:textColor="#137749"
                    android:textSize="12sp"
                    android:textFontWeight="400"/>
                <LinearLayout
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="77dp"
                        android:layout_height="85dp"
                        app:cardCornerRadius="10dp"
                        android:elevation="50dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:outlineAmbientShadowColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_course"
                            android:textSize="8sp"
                            android:textColor="#303036"
                            android:layout_marginTop="10dp"
                            android:textFontWeight="200"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="21sp"
                            android:textColor="#303036"
                            android:textFontWeight="600"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/on_going"
                            android:textSize="7sp"
                            android:textColor="#137749"
                            android:textFontWeight="200"
                            android:layout_marginTop="70dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="77dp"
                        android:layout_height="85dp"
                        app:cardCornerRadius="10dp"
                        android:elevation="50dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:outlineAmbientShadowColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/completed"
                            android:textSize="8sp"
                            android:textColor="#303036"
                            android:layout_marginTop="10dp"
                            android:textFontWeight="200"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="21sp"
                            android:textColor="#303036"
                            android:textFontWeight="600"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view"
                            android:textSize="7sp"
                            android:textColor="#137749"
                            android:textFontWeight="200"
                            android:layout_marginTop="70dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="77dp"
                        android:layout_height="85dp"
                        app:cardCornerRadius="10dp"
                        android:elevation="50dp"
                        android:outlineSpotShadowColor="@color/black"
                        android:outlineAmbientShadowColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game"
                            android:textSize="8sp"
                            android:textColor="#303036"
                            android:layout_marginTop="10dp"
                            android:textFontWeight="200"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="21sp"
                            android:textColor="#303036"
                            android:textFontWeight="600"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view"
                            android:textSize="7sp"
                            android:textColor="#137749"
                            android:textFontWeight="200"
                            android:layout_marginTop="70dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:text="@string/course_progress"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="600"/>

                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile_courseprogress"/>
                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_courseprogress"/>
                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_courseprogress"/>
                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_courseprogress"/>
                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_courseprogress"/>
                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile_courseprogress"/>
                <ImageView
                    android:layout_width="314dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/profile_courseprogress"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>