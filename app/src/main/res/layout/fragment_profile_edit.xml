<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile_edit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/edit_your_profile"
                    android:textAlignment="center"
                    android:textColor="#3A7306"
                    android:textFontWeight="700"
                    android:layout_marginTop="25dp"
                    android:textSize="30sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="374dp"
                        android:layout_height="228dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/signup"
                        android:alpha="0.3"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <androidx.cardview.widget.CardView
                            android:layout_width="165dp"
                            android:layout_height="180dp"
                            android:layout_marginTop="140dp"
                            app:cardCornerRadius="22dp"
                            android:alpha="0.6">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="143dp"
                                android:layout_height="158dp"
                                android:id="@+id/profileImage"
                                android:visibility="invisible"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:src="@drawable/profile"
                                app:shapeAppearanceOverlay="@style/RoundedImageViewShape"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/without_profile"
                                android:layout_width="143dp"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:layout_height="158dp"
                                app:cardCornerRadius="11dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#015b4f">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/profile_text"
                                        android:textColor="@color/white"
                                        android:textSize="80sp"
                                        android:layout_centerInParent="true"
                                        android:textFontWeight="600"
                                        android:fontFamily="@font/poppins"/>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/profile_edit"
                        android:layout_marginTop="120dp"
                        android:layout_marginStart="225dp"
                        android:id="@+id/profileChange"
                        android:clickable="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="327dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/gradient_color"
                    >
                    <Button
                        android:layout_width="327dp"
                        android:layout_height="50dp"
                        android:id="@+id/Submit"
                        android:text="@string/submit"
                        android:textSize="20sp"
                        android:background="#00FFFFFF"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins" />
                </RelativeLayout>
                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Change User Name"
                    android:id="@+id/NameChange"
                    android:layout_marginTop="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    

</FrameLayout>